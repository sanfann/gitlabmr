<idea-plugin version="2">
  <id>gitlabmr.idea.plugin</id>
  <name>Gitlab Merge Request</name>
  <version>1.0</version>
  <vendor email="sanfann1@gmail.com" url="http://www.yourcompany.com">YourCompany</vendor>

  <description><![CDATA[
      Enter short description for your plugin here.<br>
      <em>most HTML tags may be used</em>
    ]]></description>

  <change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="141.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <toolWindow id="Gitlab Merge Request" anchor="right" factoryClass="gitlabmr.idea.plugin.MergeRequestWindow">

    </toolWindow>
  </extensions>

  <actions>
    <action id="mrRefresh" class="gitlabmr.idea.plugin.action.MergeRequestRefresher" text="Refresh">
    </action>
  </actions>

</idea-plugin>